{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "pnpm --filter sterling-client build"
      }
    },
    {
      "src": "server/src/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/src/**/*.ts", "server/package.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/$1.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
